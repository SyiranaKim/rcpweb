</div>

@section scripts {
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Swiper
            initSwiper();

            // Initialize counters
            initCounters();

            // Initialize dashboard functionality
            initDashboard();

            // Initialize calendar
            initCalendar();
        });

        function initSwiper() {
            // Initialize Swiper with proper configuration
            const swiper = new Swiper('.pagination-scrollbar-swiper', {
                // Optional parameters
                direction: 'horizontal',
                loop: true,
                speed: 600,

                // Navigation arrows
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },

                // Scrollbar
                scrollbar: {
                    el: '.swiper-scrollbar',
                    draggable: true,
                },

                // Autoplay
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },

                // Effect
                effect: 'slide',

                // Responsive breakpoints
                breakpoints: {
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 10
                    },
                    768: {
                        slidesPerView: 1,
                        spaceBetween: 20
                    },
                    1024: {
                        slidesPerView: 1,
                        spaceBetween: 30
                    }
                }
            });

            console.log('Swiper initialized successfully');
        }

        function initCounters() {
            const counters = document.querySelectorAll('.stat-number');

            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                const duration = 2000;
                const steps = 60;
                const step = target / steps;
                let current = 0;
                let stepCount = 0;

                const timer = setInterval(() => {
                    current += step;
                    stepCount++;

                    if (stepCount >= steps) {
                        counter.textContent = target.toLocaleString();
                        clearInterval(timer);
                    } else {
                        counter.textContent = Math.round(current).toLocaleString();
                    }
                }, duration / steps);
            });
        }

        function initDashboard() {
            // Add click handlers to action buttons
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    // Add click animation
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);

                    // Show feedback
                    const actionText = this.querySelector('div:last-child').textContent;
                    alert(`Action triggered: ${actionText}`);
                });
            });

            // Add hover effects to cards
            document.querySelectorAll('.dashboard-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.zIndex = '10';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.zIndex = '';
                });
            });

            console.log('Dashboard initialized successfully');
        }

        // Calendar functionality
        let currentDate = new Date();
        let events = {
            // Pre-populate with some events
            [new Date().toISOString().split('T')[0]]: "Team Meeting",
            [new Date(Date.now() + 86400000).toISOString().split('T')[0]]: "Project Deadline",
            [new Date(Date.now() + 172800000).toISOString().split('T')[0]]: "Client Presentation"
        };

        function initCalendar() {
            renderCalendar(currentDate);
            renderMiniCalendar();
        }

        function renderCalendar(date) {
            const year = date.getFullYear();
            const month = date.getMonth();
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // Header
            document.getElementById('calendarHeader').innerHTML = `
                <div class="calendar-header">
                    <button class="btn btn-sm btn-outline-secondary" onclick="changeMonth(-1)">
                        ← Previous
                    </button>
                    <h5 class="mb-0">${date.toLocaleString('default', { month: 'long' })} ${year}</h5>
                    <button class="btn btn-sm btn-outline-secondary" onclick="changeMonth(1)">
                        Next →
                    </button>
                </div>
            `;

            // Grid
            let gridHTML = '';
            const weekdays = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

            // Add weekday headers
            weekdays.forEach(day => {
                gridHTML += `<div class="fw-bold text-center p-2">${day}</div>`;
            });

            // Add empty cells for days before the first day of the month
            for (let i = 0; i < firstDay; i++) {
                gridHTML += `<div class="calendar-day"></div>`;
            }

            // Add days of the month
            for (let d = 1; d <= daysInMonth; d++) {
                const dateStr = `${year}-${(month + 1).toString().padStart(2, '0')}-${d.toString().padStart(2, '0')}`;
                const hasEvent = events[dateStr];
                const isToday = new Date().toDateString() === new Date(year, month, d).toDateString();

                gridHTML += `
                    <div class="calendar-day ${hasEvent ? 'event' : ''} ${isToday ? 'border border-success' : ''}"
                         onclick="addEvent('${dateStr}')"
                         title="${hasEvent ? events[dateStr] : 'Click to add event'}">
                        ${d}
                        ${hasEvent ? '<br><small>●</small>' : ''}
                    </div>
                `;
            }

            document.getElementById('calendarGrid').innerHTML = gridHTML;
            renderUpcomingEvents();
        }

        function renderMiniCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            const monthName = currentDate.toLocaleString('default', { month: 'long' });

            document.getElementById('miniCalendar').innerHTML = `
                <div class="text-center mb-2">
                    <strong>${monthName} ${year}</strong>
                </div>
                <div class="text-muted small">
                    <p>Use the "Full Calendar" button to view and manage events.</p>
                    <p>Next event: ${getNextEvent()}</p>
                </div>
            `;
        }

        function getNextEvent() {
            const today = new Date().toISOString().split('T')[0];
            const upcoming = Object.entries(events)
                .filter(([date]) => date >= today)
                .sort(([a], [b]) => a.localeCompare(b))[0];

            return upcoming ? `${upcoming[1]} on ${new Date(upcoming[0]).toLocaleDateString()}` : 'No upcoming events';
        }

        function changeMonth(offset) {
            currentDate.setMonth(currentDate.getMonth() + offset);
            renderCalendar(currentDate);
            renderMiniCalendar();
        }

        function addEvent(dateKey) {
            const existingEvent = events[dateKey];
            const action = existingEvent ?
                `Edit event for ${dateKey}\nCurrent: ${existingEvent}` :
                `Add event for ${dateKey}`;

            const title = prompt(action, existingEvent || '');
            if (title !== null) {
                if (title.trim() === '') {
                    delete events[dateKey];
                } else {
                    events[dateKey] = title.trim();
                }
                renderCalendar(currentDate);
                renderMiniCalendar();
            }
        }

        function renderUpcomingEvents() {
            const list = document.getElementById('upcomingEventsList');
            if (!list) return;

            const today = new Date().toISOString().split('T')[0];
            const upcoming = Object.entries(events)
                .map(([dateStr, title]) => {
                    return { date: dateStr, title };
                })
                .filter(e => e.date >= today)
                .sort((a, b) => a.date.localeCompare(b.date))
                .slice(0, 5); // Show only next 5 events

            list.innerHTML = upcoming.length === 0 ?
                '<div class="text-muted">No upcoming events</div>' :
                upcoming.map(e => `
                    <div class="d-flex justify-content-between align-items-center p-2 border-bottom">
                        <span>${e.title}</span>
                        <small class="text-muted">${new Date(e.date).toLocaleDateString()}</small>
                    </div>
                `).join('');
        }

        // Theme-aware styling
        function updateDashboardTheme() {
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
            const cards = document.querySelectorAll('.dashboard-card');

            cards.forEach(card => {
                if (isDark) {
                    card.style.background = 'var(--card-bg)';
                    card.style.borderColor = 'var(--border-color)';
                } else {
                    card.style.background = 'var(--card-bg)';
                    card.style.borderColor = 'var(--border-color)';
                }
            });
        }

        // Listen for theme changes
        const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.attributeName === 'data-theme') {
                    updateDashboardTheme();
                }
            });
        });

        observer.observe(document.documentElement, {
            attributes: true
        });
    </script>
}