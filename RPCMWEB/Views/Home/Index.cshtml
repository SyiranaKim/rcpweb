                                <img src="https://via.placeholder.com/800x400/28a745/ffffff?text=Image+3" alt="Image 3" class="img-fluid rounded" />
                            </div>
                            <div class="swiper-slide">
                                <img src="https://via.placeholder.com/800x400/20c997/ffffff?text=Image+4" alt="Image 4" class="img-fluid rounded" />
                            </div>
                        </div>

                        <!-- Navigation buttons -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>

                        <!-- Scrollbar -->
                        <div class="swiper-scrollbar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Section with Calendar and Events -->
    <div class="row mt-4">
        <div class="col-xl-6 col-lg-12">
            <!-- Upcoming Events Section -->
            <div class="dashboard-card card-animate">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h5 class="stat-label mb-1">Upcoming Events</h5>
                        <div class="stat-number">5</div>
                    </div>
                    <div class="icon-wrapper bg-warning-subtle">📅</div>
                </div>
                <div id="upcomingEventsList">
                    <!-- Events will be populated by JavaScript -->
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-12">
            <!-- Calendar Section -->
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="stat-label mb-0">Team Calendar</h5>
                    <button class="btn btn-sm btn-outline-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#calendarOffcanvas">
                        📅 Full Calendar
                    </button>
                </div>
                <div id="miniCalendar"></div>
            </div>
        </div>
    </div>

    <!-- Control Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex gap-2">
                <button class="btn btn-outline-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#recentActivityOffcanvas">
                    Show Recent Activity
                </button>
                <button class="btn btn-outline-success" type="button" data-bs-toggle="offcanvas" data-bs-target="#calendarOffcanvas">
                    📅 Open Team Calendar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Offcanvas Calendar -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="calendarOffcanvas" aria-labelledby="calendarOffcanvasLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="calendarOffcanvasLabel">Team Calendar</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-3">
        <div id="calendarHeader"></div>
        <div id="calendarGrid" class="calendar-grid"></div>
