@section styles {
    <style>
        /* Dashboard-specific styles */
        .dashboard-card {
            background: var(--card-bg);
            border-radius: 12px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border-color);
            padding: 20px;
            margin-bottom: 24px;
            transition: all 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .card-animate {
            transition: all 0.3s ease;
        }

            .card-animate:hover {
                transform: translateY(-5px);
            }

        .stat-number {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--brand-green);
            margin: 10px 0;
        }

        .stat-label {
            color: var(--muted);
            font-size: 0.9rem;
            text-transform: uppercase;
            font-weight: 600;
        }

        .stat-trend {
            display: inline-flex;
            align-items: center;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .trend-up {
            background: rgba(11, 107, 59, 0.1);
            color: #0b6b3b;
        }

        .trend-down {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .icon-wrapper {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .bg-success-subtle {
            background: rgba(11, 107, 59, 0.1);
            color: #0b6b3b;
        }

        .bg-info-subtle {
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
        }

        .bg-warning-subtle {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .bg-primary-subtle {
            background: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
        }

        .bg-danger-subtle {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        /* Grid layout improvements */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(111px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .welcome-section {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, var(--brand-green) 0%, #1e7e34 100%);
            color: white;
            border-radius: 15px;
        }

        .welcome-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .welcome-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin: 30px 0;
        }

        .action-btn {
            background: var(--card-bg);
            border: 2px solid var(--border-color);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

            .action-btn:hover {
                border-color: var(--brand-green);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .action-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--brand-green);
        }
    </style>
