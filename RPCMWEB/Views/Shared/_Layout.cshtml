              </div>
            `;
          }

          gridHTML += '</div>';
          calendarGrid.innerHTML = gridHTML;
        }

        function changeMonth(offset) {
          currentDate.setMonth(currentDate.getMonth() + offset);
          renderCalendar(currentDate);
        }

        function addEvent(dateKey) {
          const title = prompt("Add event for " + dateKey);
          if (title) {
            events[dateKey] = title;
            renderCalendar(currentDate);
          }
        }

        renderCalendar(currentDate);
            // Close dropdowns when clicking outside
            document.addEventListener('click', function(e) {
                // Close navigation dropdowns
                if (!e.target.closest('.nav-item.dropdown')) {
                    document.querySelectorAll('.nav-item.dropdown.open').forEach(item => {
                        item.classList.remove('open');
                    });
                }

                // Close language selector
                if (translateSelector && !translateSelector.contains(e.target)) {
                    translateSelector.classList.remove('open');
                }

                // Close notifications
                if (notificationContainer && !notificationContainer.contains(e.target)) {
                    notificationContainer.classList.remove('open');
                }

                // Close mobile menu
                if (mainNav && !mainNav.contains(e.target) && !e.target.closest('.burger-menu')) {
                    mainNav.classList.remove('open');
                    if (burgerMenu) burgerMenu.classList.remove('open');
                }
            });

            // Close with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    document.querySelectorAll('.nav-item.dropdown.open, .language-selector.open, .notification-container.open').forEach(el => {
                        el.classList.remove('open');
                    });
                    if (mainNav) mainNav.classList.remove('open');
                    if (burgerMenu) burgerMenu.classList.remove('open');
                }
            });

            console.log('✅ Application initialized successfully!');
